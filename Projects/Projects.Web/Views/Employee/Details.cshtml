@model Projects.Web.Models.Entities.EmployeeVM

@{
    ViewBag.Title = "Подробная информация";
}

<div class="block">
    <h2 clss="block-title">Подробная информация</h2>

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.FullName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.FullName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ExecutorCompanyId)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ExecutorCompany.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PositionId)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Position.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Phone)
            </dd> 
            
            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DateBorn)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DateBorn)
            </dd>
        </dl>
    </div>

    <div class="form-group">
        <div class="btn-group" role="group">
            <a href="@Url.Action("Edit", "Employee", new { id = Model.Id})" class="btn btn-success"><i class="fa fa-pencil" aria-hidden="true" title="Редактировать" data-toggle="tooltip" data-placement="top"></i> Редактировать</a>
            <a href="@Url.Action("Index", "Employee")" class="btn btn-info"><i class="fa fa-arrow-left" aria-hidden="true" title="Назад" data-toggle="tooltip" data-placement="top"></i> Назад</a>
        </div>
    </div>

</div>
