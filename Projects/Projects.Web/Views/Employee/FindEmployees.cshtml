@model IEnumerable<Projects.Web.Models.Entities.EmployeeVM>

<div id="found-items" class="row">
    @if (Model.Count() <= 0)
    {
        <p>Нет результатов</p>
    }
    else
    {
        <table class="table table-hover table-responsive table-striped" id="found-items-list">
            <caption>Список найденных сотрудников</caption>
            <thead>
                <tr>
                    <th>Действие</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.PositionId)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Projects.Web.Models.Entities.EmployeeVM employee in Model)
                {
                    <tr id="@employee.Id">
                        <td>
                            <button class="btn btn-primary" type="button" onclick="attachEmployee('@employee.Id')">Добавить</button>
                        </td>
                        <td class="name">@Html.DisplayFor(model => employee.FullName)</td>
                        <td class="position">@Html.DisplayFor(model => employee.Position.Name)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>